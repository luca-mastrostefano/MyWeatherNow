<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1">
    <ImageView
            android:layout_width="119dp"
            android:layout_height="119dp"
            android:id="@+id/weather_image" android:layout_gravity="left|top" android:src="@drawable/weather_sample"
            android:layout_marginStart="35dp" android:layout_marginTop="33dp" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="119dp" android:layout_alignTop="@+id/weather_image"
            android:layout_alignBottom="@+id/weather_image" android:layout_toEndOf="@+id/weather_image">
        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/gps_image" android:layout_gravity="center" android:src="@drawable/gps"
                android:layout_alignParentTop="true" android:layout_marginLeft="60dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Rome"
                android:id="@+id/city" android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_alignBottom="@id/gps_image"
                android:layout_toRightOf="@+id/gps_image"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Mar, 6 Gen"
                android:id="@+id/date"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/city"
                android:layout_alignLeft="@+id/city"/>
    </RelativeLayout>
    <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Now is partially sunny, but cold and with strong windSpeed from north. So I suggest you to wear an heavy coat"
            android:id="@+id/weather_suggestion"
            android:layout_below="@+id/weather_image" android:layout_alignStart="@+id/weather_image"/>
    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/weather_suggestion"
            android:layout_alignStart="@+id/weather_suggestion"
            android:layout_marginTop="10dp"
            android:layout_alignEnd="@+id/weather_suggestion">

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".33"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="center"
                    android:text="Temp."
                    android:id="@+id/column_temperature"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".33"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="center"
                    android:text="Humidity"
                    android:id="@+id/column_humidity"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".33"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="center"
                    android:text="Rain"
                    android:id="@+id/column_rain"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="20dp">
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".33"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="center"
                    android:text="8Â°"
                    android:id="@+id/value_temperature"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".33"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="center"
                    android:text="50%"
                    android:id="@+id/value_humidity"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".33"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="center"
                    android:text="10%"
                    android:id="@+id/value_rain"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="20dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Wind"
                    android:id="@+id/column_wind"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="20dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="12Km/h NE"
                    android:id="@+id/value_wind"/>
        </TableRow>

    </TableLayout>
</RelativeLayout>

