<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1">
    <ImageView
            android:layout_width="119dp"
            android:layout_height="119dp"
            android:id="@+id/imageView" android:layout_gravity="left|top" android:src="@drawable/weather_sample"
            android:layout_marginStart="35dp" android:layout_marginTop="33dp" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="119dp" android:layout_alignTop="@+id/imageView"
            android:layout_alignBottom="@+id/imageView" android:layout_toEndOf="@+id/imageView">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Rome"
                android:id="@+id/textView" android:layout_gravity="center_horizontal"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Fri 2 Jan"
                android:id="@+id/textView2" android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Now is partially sunny, but cold and with strong wind from north.             So I suggest you to wear an heavy coat"
            android:id="@+id/textView3"
            android:layout_below="@+id/imageView" android:layout_alignStart="@+id/imageView"/>
    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_below="@+id/textView3"
            android:layout_marginTop="43dp" android:layout_alignStart="@+id/textView3"
            android:layout_alignEnd="@+id/textView3">

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".33"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="center"
                    android:text="Temp."
                    android:id="@+id/textView4"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".33"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="center"
                    android:text="Humidity"
                    android:id="@+id/textView5"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".33"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="center"
                    android:text="Rain"
                    android:id="@+id/textView6"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="20dp">
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".33"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="center"
                    android:text="8Â°"
                    android:id="@+id/textView7"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".33"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="center"
                    android:text="50%"
                    android:id="@+id/textView8"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".33"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="center"
                    android:text="10%"
                    android:id="@+id/textView9"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="20dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Wind"
                    android:id="@+id/textView10"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="20dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="12Km/h NE"
                    android:id="@+id/textView11"/>
        </TableRow>

    </TableLayout>
</RelativeLayout>

