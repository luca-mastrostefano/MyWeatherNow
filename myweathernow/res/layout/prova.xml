<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/background"
            android:src="@drawable/rainy_day"
            android:scaleX="1.5"
            android:scaleY="2"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:weightSum="1">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:weightSum="1">

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="@string/button_today"
                    android:id="@+id/button_today"
                    android:layout_weight="0.5"
                    android:background="@android:color/transparent"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:onClick="showTodayInfo"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="@string/button_tomorrow"
                    android:id="@+id/button_tomorrow"
                    android:layout_weight="0.5"
                    android:background="#80FFFFFF"
                    android:textColor="#ff0c2c46"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:onClick="showTomorrowInfo"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:weightSum="1">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/location_name"
                    android:id="@+id/city"
                    android:layout_gravity="right"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0.01"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginRight="20dp"
                    android:text="@string/date"
                    android:id="@+id/date"
                    android:layout_gravity="right"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_weight="0.01"/>
            <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/umbrella_suggestion"
                    android:src="@drawable/open_umbrella_color"
                    android:layout_weight="0.65"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/umbrella_suggestion"
                    android:id="@+id/rain_suggestion"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#ffffffff"
                    android:textStyle="bold"
                    android:layout_weight="0.05"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:weightSum="1">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ff0c2c46"
                        android:layout_weight="0.01">
                    <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/today_info"
                            android:id="@+id/today_info"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:weightSum="1"
                        android:background="#80FFFFFF">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.5"
                            android:layout_marginTop="2dp">
                        <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="@string/rain_probabiloty_title"
                                android:id="@+id/probability_today_title"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="#FFFF00"/>
                        <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="@string/rain_probabiloty_value"
                                android:id="@+id/probability_today_value"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="#FFFF00"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.5"
                            android:layout_marginTop="2dp">
                        <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="@string/rain_intensity_title"
                                android:id="@+id/intensity_today_title"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="#FF0000"/>
                        <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="@string/rain_intensity_value"
                                android:id="@+id/intensity_today_value"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="#FF0000"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:weightSum="1">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ff0c2c46">
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/details"
                        android:id="@+id/details"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textStyle="bold"/>
            </LinearLayout>
            <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#80FFFFFF">
                <!-- https://github.com/PhilJay/MPAndroidChart -->
                <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chartProbabilities"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="18dp"
                        android:background="@android:color/transparent"
                        android:layout_alignParentLeft="true"
                        />
                <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chartIntensities"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:layout_marginLeft="18dp"
                        android:layout_alignParentRight="true"
                        />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>